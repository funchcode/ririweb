{{#> layouts/base }}
    {{#* inline "content"}}
        <form id="enroll">
            <div class="form-row">
                <div class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">이름</span>
                        </div>
                        <input id="name" type="text" class="form-control" placeholder="고객 성함" required>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <input id="month" type="number" class="form-control" min="1" max="12">
                        <div class="input-group-append">
                            <span class="input-group-text">월</span>
                        </div>
                        <input id="day" type="number" class="form-control" min="1" max="31">
                        <div class="input-group-append">
                            <span class="input-group-text">일</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">휴대폰</span>
                        </div>
                        <input id="phone" type="tel" class="form-control" maxlength="13" placeholder="휴대폰 번호">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">담당 직원</span>
                        </div>
                        <select class="custom-select" id="staff">
                            <option value="1" selected>원장</option>
                            <option name="staff" value="2">직원1</option>
                            <option name="staff" value="3">직원2</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">이메일</span>
                        </div>
                        <input id="email1" type="text" class="form-control">
                        <div class="input-group-text">@</div>
                        <input id="email2" type="text" class="form-control" placeholder="ex)naver.com" list="email-list">
                        <datalist id="email-list">
                            <option value="naver.com">naver.com</option>
                            <option value="gmail.com">gmail.com</option>
                        </datalist>
                    </div>
                </div>
                <div class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">성별</span>
                        </div>
                        <select class="custom-select" id="sex">
                            <option name="sex" value="w" selected>여자</option>
                            <option name="sex" value="m">남자</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">메모</span>
                        </div>
                        <input name="memo" type="text" class="form-control" id="memo" placeholder="메모">
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-dark">Dark</button>
        </form>
    {{/inline}}

    {{#* inline "footer"}}
        <script src="/js/custom.js"></script>
    {{/inline}}
{{/layouts/base}}